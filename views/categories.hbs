<div class="row">
    <div class="col-md-12">
          {{!-- <h2>Categories</h2> --}}
          <h2><a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
          <hr />

          {{!-- <p>TODO: render a list of all category id's and categories here</p> --}}
                <div class="table-responsive">
                <table class="table ">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each categories}}
                        <tr>
                            <td><a href="/posts?category={{id}}">{{id}}</a></td>
                            <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        </tr>
                    {{else}}
                    {{/each}}
                    </tbody>
                </table>
                </div>

                {{#unless posts}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
                {{/unless}}

    </div>
</div>