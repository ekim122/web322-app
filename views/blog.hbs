<div class="row">
    <section class="main col-md-9">
        {{#if data.post}}
        <article>
            {{!-- <h2>Post Title</h2> --}}
            <h2>{{data.post.title}}</h2>
            {{!-- <img src="https://dummyimage.com/847x320/d9d9d9/545454.jpg" alt="feature Image" style="width:100%" /> --}}
            <img src= {{data.post.featureImage}} alt="feature Image" style="width:100%" />
            <br /><br />
            {{#safeHTML data.post.body}}{{/safeHTML}}
            <br /><br />
            <strong>Category:</strong> {{data.post.category}}<br />
            <strong>Last Updated:</strong> {{data.post.postDate}}
        {{else}}
            <div class="col-md-12 text-center">
                <h2>{{data.message}}</h2>
                <p>Please try another Post / Category</p>
            </div>
        </article>
        {{/if}}
    </section>
    <aside class="col-md-3">
        <br /><br />
        {{#if data.posts}}
        <h4>Posts</h4>
        {{!-- {{#each data.posts}} --}}
        <ul class="list-group">
            {{#each data.posts}}
            {{!-- <a href="#" class="list-group-item">Post 1</a>
            <a href="#" class="list-group-item">Post 2</a>
            <a href="#" class="list-group-item">etc...</a> --}}
            {{!-- <td><a href="/posts?category={{id}}">{{id}}</a></td> --}}
            {{!-- <a href="/blog/{{data.id}}?category={{../viewingCategory}}" class="list-group-item">Post {{data.id}}</a> --}}
            <a href="/blog/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
            {{/each}}
        </ul>
        {{/if}}

        {{#if data.categories}}
        <h4>Categories</h4>

        <ul class="list-group">
            {{#each data.categories}}
           {{!-- <a href="#" class="list-group-item">Category 1</a>
            <a href="#" class="list-group-item">Category 2</a>
            <a href="#" class="list-group-item">etc...</a> --}}
            <a href="/blog?category={{id}}" class="list-group-item">{{category}}</a>
            {{/each}}
        </ul>
        {{/if}}
    </aside>
</div>