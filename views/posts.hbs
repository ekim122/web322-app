<div class="row">
    <div class="col-md-12">
          {{!-- <h2>Posts</h2> --}}
          <h2>Posts <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
          <hr />

          {{!-- <p>TODO: render a list of all post title values here</p> --}}
            <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                {{#each posts}}
                    <tr>
                        <td>{{postID}}</td>
                        <td>{{title}}</td>
                        <td>{{#formatDate postDate}}{{/formatDate}}</td>
                        <td><a href="/posts?category={{category}}">{{category}}</a></td>
                        <td>{{published}}</td>
                        <td><a class="btn btn-danger" href="posts/delete/{{postID}}">remove</a></td>
                    </tr>
                {{else}}
                {{/each}}
                </tbody>
            </table>
            </div>

            {{#unless posts}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
            {{/unless}}

    </div>
</div>